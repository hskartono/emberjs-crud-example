{{!-- Title and Create Button --}}
  <div class="row mt-3">
    <div class="col-lg-6">
      <h3 class="text-info">Registered Product</h3>
    </div>
    <div class="col-lg-6">
      {{#link-to "product.create" class="btn btn-info float-right"}}
        <i class="fas fa-user"></i>&nbsp;&nbsp;Add New Product
      {{/link-to}}
    </div>
  </div>
  <hr class="bg-info">

  {{!-- Displaying Records --}}
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-bordered table-striped">
        <thead>
          <tr class="text-center bg-info text-light">
            <th>ID</th>
            <th>Name</th>
            <th>Weight</th>
            <th>Qty</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          {{#each this.model as |product|}}
            <tr class="text-center">
              <td>{{product.id}}</td>
              <td>{{#link-to "product.detail" product.id class="text-success"}}{{product.name}}{{/link-to}}</td>
              <td>{{product.weight}} Kg</td>
              <td>{{product.price}}</td>
              <td>{{#link-to "product.edit" product.id class="text-success"}}{{fa-icon "edit"}}{{/link-to}}</td>
              <td><a href="#" class="text-danger" {{action "deleteProduct" product.id}} >{{fa-icon "trash-alt"}}</a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="clearfix">
        <button class="btn btn-primary" {{action "movePrev" meta.page}}>Prev</button>
        <div class="hint-text">Page <b>{{ meta.page }}</b> out of <b>{{ meta.pages }}</b></div>
        <button class="btn btn-primary" {{action "moveNext" meta.page}}>Next</button>
      </div>
    </div>
  </div>